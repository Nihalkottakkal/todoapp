<!DOCTYPE html>
<html>

    <head>
        <link rel="stylesheet" href="/stylesheets/signup.css">
    </head>

    <body>
        <div class="main">

            <div class="bg">
                <div class="text">
                    <h4>Welcome to</h4>
                    <h1>ToDoApp</h1>
                </div>
            </div>

            <div class="form">
                <h1 class="h1">SIGN UP</h1>
                <p>Already have account?
                    <a href="login">Login</a>
                </p>
                
                <form method="POST" action="/signup" onsubmit="return validation()">
                    <input required type="text" placeholder="Username" name="username" id="username"><br><br>
                    <input required type="email" placeholder="E-mail" name="email" id="email"><br><br>
                    <input required type="password" placeholder="Create Password" name="password" id="password"><br><br>
                    <input required type="password" placeholder="Confirm Password" id="confirmpass"><br><br>
                    <button>SIGN UP</button>
                </form>
            </div>
        </div>

    <script>
        function validation() {

            var pass = document.getElementById('password')
            var confirmp = document.getElementById('confirmpass')

            if(pass.value.length<8)
            {
                alert('password must include atleast 8 characters')
                return false
            }
            else if (pass.value!==confirmp.value)
            {
                alert("incorrect password");
                return false
            }
            else
            {
                return true
            }

        }
        
    </script>

        


    </body>

</html>